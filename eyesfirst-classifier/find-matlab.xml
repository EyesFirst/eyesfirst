<project name="matlab">
	<target name="locate-mcr" unless="matlab">
		<!-- If matlab isn't set, guess a bunch of locations. -->
		<available property="matlab" value="${env.MATLAB_HOME}" file="${env.MATLAB_HOME}" type="dir"/>
		<available property="matlab" value="${env.MCRROOT}" file="${env.MCRROOT}" type="dir"/>
		<available property="matlab" value="/opt/MATLAB/R2011b" file="/opt/MATLAB/R2011b" type="dir"/>
		<available property="matlab" value="/opt/MATLAB/R2011a" file="/opt/MATLAB/R2011a" type="dir"/>
		<available property="matlab" value="/Applications/MATLAB_R2011b.app" file="/Applications/MATLAB_R2011b.app" type="dir"/>
		<available property="matlab" value="/Applications/MATLAB_R2011a.app" file="/Applications/MATLAB_R2011a.app" type="dir"/>
		<available property="matlab" value="C:\MATLAB\R2011b" file="C:\MATLAB\R2011b" type="dir"/>
		<available property="matlab" value="C:\MATLAB\R2011a" file="C:\MATLAB\R2011a" type="dir"/>
		<available property="matlab" value="${env.SystemRoot}\MATLAB\R2011b" file="${env.SystemRoot}\MATLAB\R2011b" type="dir"/>
		<available property="matlab" value="${env.SystemRoot}\MATLAB\R2011a" file="${env.SystemRoot}\MATLAB\R2011a" type="dir"/>
		<fail unless="matlab">Unable to locate MATLAB. Please set the MATLAB property, like:

ant -Dmatlab=/path/to/matlab</fail>
	</target>
</project>
